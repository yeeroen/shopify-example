    .header__inner {
        justify-content: normal;
        column-gap: 0;
        width: 960px;
        margin: 0 auto;
        padding: 20px 0;
    }
}

.header__left-side,
.header__right-side {
    display: flex;
    justify-content: space-between;
    width: 80px;
    min-width: 80px;
    height: 100%;
}

@media (min-width: 1024px) {
    .header__left-side {
        display: none;
    }
}

.header__right-side {
    justify-content: flex-end;
}

@media (min-width: 1024px) {
    .header__right-side {
        width: 25%;
    }
}

.header__toggle-navigation {
    position: relative;
    width: 30px;
    height: 30px;
}

.header__toggle-navigation::before,
.header__toggle-navigation::after {
    content: '';
    display: block;
}

.header__toggle-navigation-icon,
.header__toggle-navigation::before,
.header__toggle-navigation::after {
    position: absolute;
    width: 100%;
    height: 4px;
    background-color: #2155b5;
    border-radius: 2px; 
}

.header__toggle-navigation::before {
    top: 3px;
}

.header__toggle-navigation-icon {
    top: 13px;
}

.header__toggle-navigation::after {
    top: 23px;
}

.header__toggle-navigation--show::before {
    transform: rotate(-45deg);
    top: 13px;
}

.header__toggle-navigation--show .header__toggle-navigation-icon {
    opacity: 0;
}

.header__toggle-navigation--show::after {
    transform: rotate(45deg);
    top: 13px;
}

