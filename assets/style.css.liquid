    position: relative;
    z-index: 11;
    width: 100%;
    background-color: #ffffff;
}

@media (min-width: 1024px) {
    .header {
        background-color: #f0f1f2; 
    }
}

.header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    column-gap: 20px;
    width: 100%; 
    height: 60px;
    padding: 15px 20px;
}
 
