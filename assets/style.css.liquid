}

.navigation {
    position: absolute;
    z-index: 10;
    top: 0px;
    left: -100vw;
    width: 100%;
    height: 100%;
    padding-top: 60px;
    background: #ffffff;
    transition: left .5s ease;
}

.navigation.navigation--show {
    left: 0;
}

