* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    display: flex;
    flex-direction: column;
    position: relative;
    min-height: 100vh;
    font-family: 'Ubuntu', sans-serif;
    background-color: #ffffff;
    overflow-x: hidden;
}

